md-sidenav.md-sidenav-left(
	md-component-id="left"
	md-is-locked-open="true"
	md-whiteframe="1"
	flex="20"
)

	md-toolbar.md-theme-indigo
		h1.md-toolbar-tools Stories
	
	md-content

		//- VIEWPOINTS
		md-list(flex)
			md-subheader.md-no-sticky Viewpoints
			md-list-item.md-2-line(
				ng-click="showViewpointCreate()"
			)
				div.md-list-item-text(layout="column")
					h3 Create New Viewpoint

			md-list-item.md-2-line(
				ng-repeat="viewpoint in viewpoints.all"
				ng-click="showViewpoint(viewpoint)"
			)
				div.md-list-item-text(layout="column")
					h3 {{viewpoint.title}}
					h4(ng-if="viewpoint.sort_order") Sort order: {{viewpoint.sort_order}}
		div(flex)

