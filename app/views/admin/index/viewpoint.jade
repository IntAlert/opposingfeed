md-toolbar.md-accent.md-hue-1
	h1.md-toolbar-tools Viewpoint

md-content(flex)
	div(
		layout-padding
		layout="row"
	)
		md-input-container(flex=70)
			label Viewpoint Text
			input(required, ng-model="selectedViewpoint.title")

		md-input-container(flex=10)
			label Sort order
			input(required, ng-model="selectedViewpoint.sort_order")
		
		div(flex=10)
			md-button.md-raised.md-primary(
				ng-click="saveSelectedViewpoint()"
			) Save

		div(flex=10)
			md-button.md-raised.md-accent(
				ng-click="deleteSelectedViewpoint()"
			) Delete

	div.stories(layout="row", ng-show="selectedViewpoint.id")
		div(flex=50)
			md-toolbar.md-accent.md-hue-3
				h1.md-toolbar-tools Agree

			md-content
				md-list(flex)

					md-list-item.md-2-line(ng-click="showStoryCreate(true)")
						div.md-list-item-text(layout="column")
							h3 Create Agreeing Story

					md-list-item.md-2-line(
						ng-repeat="story in selectedViewpointStories.agree"
						ng-click="showStory(story)"
					)
						div.md-list-item-text(layout="column")
							h3 {{story.title}}
							h4 {{story.url}}

		md-divider

		div(flex=50)
			md-toolbar.md-accent.md-hue-2
				h1.md-toolbar-tools Disagree 

			md-content
				md-list(flex)

					md-list-item.md-2-line(ng-click="showStoryCreate(false)")
						div.md-list-item-text(layout="column")
							h3 Create Disagreeing Story

					md-list-item.md-2-line(
						ng-repeat="story in selectedViewpointStories.disagree"
						ng-click="showStory(story)"
					)
						div.md-list-item-text(layout="column")
							h3 {{story.title}}
							h4 {{story.url}}
